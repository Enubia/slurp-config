{
    "$schema": "https://json.schemastore.org/eslintrc.json",

    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "./prettier.json"
    ],

    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "rules": {},

    "env": {
        "browser": true
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    },

    "overrides": [
        {
            "files": [
                "*.jsx"
            ]
        }
    ]
}